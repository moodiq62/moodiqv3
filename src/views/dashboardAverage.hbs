            <div class="emoji-item">
              <span class="emoji">üòê</span>
              <span class="counter">{{this.neutralCount}}</span>
            </div>
            <div class="emoji-item">
              <span class="emoji">üò†</span>
              <span class="counter">{{this.enojadoCount}}</span>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
<div class="card-footer">
    <center style="margin-block: 15px;">    
    <a href="/">
      <button class="btn btn-primary btn-block">Inicio</button>
    </a>
   </center>
  </div>
</div>


